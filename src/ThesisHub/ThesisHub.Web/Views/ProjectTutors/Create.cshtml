@model ProjectTutorViewModel

@{
    Layout = "GenericViews/_Create";
    ViewData["ViewModel"] = Model;
    var project = Model.StaticFields[0];
    var tutor = Model.StaticFields[1];
    var tutorRole = Model.StaticFields[2];
}

@section AdditionalFields {
    @await Html.PartialAsync("Fields/_Select", project)
    @await Html.PartialAsync("Fields/_Select", tutor)
    @await Html.PartialAsync("Fields/_DynamicFields", tutorRole)
}

@section AdditionalScripts {
    <script src="/js/Generics/selects.js"></script>
    <script>
        loadProjectSelect();
        loadTutorSelect;
    </script>
}
