@model StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4 border-danger">

        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Student</h3>
        </div>

        <div class="card-body">
            <h5 class="mb-4 text-danger">Are you sure you want to delete this student?</h5>

            <dl class="row">
                <dt class="col-sm-3">First name</dt>
                <dd class="col-sm-9" id="firstName"></dd>

                <dt class="col-sm-3">Last name</dt>
                <dd class="col-sm-9" id="lastName"></dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9" id="email"></dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9" id="phone"></dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9" id="department"></dd>
            </dl>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <button onclick="deleteStudent()" class="btn btn-lg btn-danger px-4">
                    <i class="bi bi-trash3-fill me-2"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        loadStudent(@Model.Id);
    });

    function loadStudent(id) {
        $.get(`${studentAPI}/Get/${id}`, function (entity) {
            $("#firstName").html(entity.firstName);
            $("#lastName").html(entity.lastName);
            $("#email").html(entity.email);
            $("#phone").html(entity.phone);
            $("#department").text(entity.department.deptName);
        });
    }

    function deleteStudent() {
        $.ajax({
            url: `${studentAPI}/Delete/${@Model.Id}`,
            type: "DELETE",
            contentType: "application/json",
            success: function (response) {
                if (response.success) {
                    window.location.href = "/Students/Index";
                } else {
                    alert("Error: " + response.message);
                }
            },
            error: function (xhr, status, error) {
                console.error("AJAX Error:", status, error);
                alert("An error occurred. Please try again.");
            }
        });
    }
</script>
}