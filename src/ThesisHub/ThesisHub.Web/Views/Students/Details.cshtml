@model StudentViewModel

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">

        <div class="card-header bg-info text-black">
            <h3 class="mb-0">Student Details</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">First name</dt>
                <dd class="col-sm-9" id="firstName"></dd>

                <dt class="col-sm-3">Last name</dt>
                <dd class="col-sm-9" id="lastName"></dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9" id="email"></dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9" id="phone"></dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9" id="department"></dd>
            </dl>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        loadDetails(@Model.Id);
    });

    function loadDetails(id) {
        $.get(`${studentAPI}/Get/${id}`, function (entity) {
            $("#firstName").text(entity.firstName);
            $("#lastName").text(entity.lastName);
            $("#email").text(entity.email);
            $("#phone").text(entity.phone);
            $("#department").text(entity.department.deptName);
        });
    }
</script>
}