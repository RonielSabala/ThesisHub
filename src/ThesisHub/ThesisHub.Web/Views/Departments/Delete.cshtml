@model DepartmentViewModel

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4 border-danger">

        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Department</h3>
        </div>

        <div class="card-body">
            <h5 class="mb-4 text-danger">Are you sure you want to delete this department?</h5>

            <dl class="row">
                <dt class="col-sm-3">Department Name</dt>
                <dd class="col-sm-9" id="deptName"></dd>

                <dt class="col-sm-3">Faculty Head</dt>
                <dd class="col-sm-9" id="facultyHead"></dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9" id="email"></dd>
            </dl>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <button onclick="deleteDepartment()" class="btn btn-lg btn-danger px-4">
                    <i class="bi bi-trash3-fill me-2"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        loadDelete(@Model.Id);
    });

    function loadDelete(id) {
        $.get(`${departmentAPI}/Get/${id}`, function (entity) {
            $("#deptName").html(entity.deptName);
            $("#facultyHead").html(entity.facultyHead);
            $("#email").html(entity.email);
        });
    }

    function deleteDepartment() {
        $.ajax({
            url: `${departmentAPI}/Delete/${@Model.Id}`,
            type: "DELETE",
            contentType: "application/json",
            success: function (response) {
                if (response.success) {
                    window.location.href = "/Departments/Index";
                } else {
                    alert("Error: " + response.message);
                }
            },
            error: function (xhr, status, error) {
                console.error("AJAX Error:", status, error);
                alert("An error occurred. Please try again.");
            }
        });
    }
</script>
}