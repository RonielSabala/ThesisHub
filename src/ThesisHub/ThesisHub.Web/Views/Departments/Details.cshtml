@model Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />

    <dl class="row">
        @* Department name *@
        <dt class="col-sm-2">Department name</dt>
        <dd class="col-sm-10" id="deptName">@Model.DeptName</dd>

        @* Faculty head *@
        <dt class="col-sm-2">Faculty head</dt>
        <dd class="col-sm-10" id="facultyHead">@Model.FacultyHead</dd>

        @* Email *@
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10" id="email">@Model.Email</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>