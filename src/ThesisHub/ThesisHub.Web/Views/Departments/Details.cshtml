@model DepartmentViewModel

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">

        <div class="card-header bg-info text-black">
            <h3 class="mb-0">Department Details</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Department Name</dt>
                <dd class="col-sm-9" id="deptName">Finance</dd>

                <dt class="col-sm-3">Faculty Head</dt>
                <dd class="col-sm-9" id="facultyHead">Dr. Smith</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9" id="email">finance@university.edu</dd>
            </dl>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        loadDetails(@Model.Id);
    });

    function loadDetails(id) {
        $.get(`${departmentAPI}/Get/${id}`, function (entity) {
            $("#deptName").text(entity.deptName);
            $("#facultyHead").text(entity.facultyHead);
            $("#email").text(entity.email);
        });
    }
</script>
}