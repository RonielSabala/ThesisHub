@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" href="/Departments/Create">Create New</a>
</p>

@* Search box *@
<div class="row mb-3">
    <div class="col-md-4">
        <input id="search" class="form-control" placeholder="Search a department..." onkeyup="loadDepartments()"/>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Dept. name</th>
            <th>Faculty head</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>

    <tbody id="entityTable">
        @*Here AJAX will display the info*@
    </tbody>
</table>


@section Scripts {
<script>
    $(document).ready(function () {
        loadDepartments();
    });

    function loadDepartments() {
        let filter = $("#search").val();

        $.get(`${departmentAPI}/GetAll`, { filter: filter }, function (entities) {
            const rows = entities.map(entity => `
                <tr>
                    <td>${entity.deptName}</td>
                    <td>${entity.facultyHead}</td>
                    <td>${entity.email}</td>
                    <td>
                        <a href="/Departments/Details/${entity.id}" class="btn btn-info">Details</a> |
                        <a href="/Departments/Edit/${entity.id}" class="btn btn-warning">Edit</a> |
                        <a href="/Departments/Delete/${entity.id}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>`).join('');

            $("#entityTable").html(rows);
        });
    }
</script>
}