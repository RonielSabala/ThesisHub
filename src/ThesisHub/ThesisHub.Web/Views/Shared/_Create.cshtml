@{
    Layout = "_Layout";
    var entity = ViewData["Entity"].ToString();
    var path = $"/js/{entity}s";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">

        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Create New @entity</h3>
        </div>

        <div class="card-body">
            <h4>Fields</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @* Fields injection here *@
                    @RenderSection("Fields", required: true)

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button onclick="addEntity()" class="btn btn-lg btn-success px-4">
                            <i class="bi bi-plus-circle me-2"></i> Create
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="@(path)/create.js"></script>

    @await RenderSectionAsync("AdditionalScripts", required: false)
}