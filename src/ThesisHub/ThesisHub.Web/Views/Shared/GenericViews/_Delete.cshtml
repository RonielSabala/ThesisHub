@{
    Layout = "_Layout";
    var Model = ViewData["ViewModel"] as BaseEntityViewModel;
    var entity = Model.EntityName;
    var routePrefix = $"/js/{entity}s";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4 border-danger">

        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete @entity</h3>
        </div>

        <div class="card-body">
            <h5 class="mb-4 text-danger">Are you sure you want to delete this @(entity.ToLower())?</h5>

            <dl class="row">
                
                @* Fields injection here *@
                @await Html.PartialAsync("Fields/_StaticFields", Model.StaticFields)
                @await RenderSectionAsync("AdditionalFields", required: true)

            </dl>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <button onclick="deleteEntity(@Model.Id)" class="btn btn-lg btn-danger px-4">
                    <i class="bi bi-trash3-fill me-2"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="/js/Generics/delete.js"></script>
    <script src="@(routePrefix)/common.js"></script>
    <script src="@(routePrefix)/load_entity.js"></script>
    <script src="@(routePrefix)/delete.js"></script>
    <script>
        $(document).ready(function () {
            loadEntity(@Model.Id);
        });
    </script>

    @await RenderSectionAsync("AdditionalScripts", required: false)
}