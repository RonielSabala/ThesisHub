@{
    Layout = "_Layout";
    var Model = ViewData["ViewModel"] as BaseEntityViewModel;
    var entity = Model.EntityPageName;
    var routePrefix = $"/js/App/{Model.EntityName}s";
}

<style>
    .center-screen {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .entity-card {
        border-radius: 1rem;
        max-width: 950px;
    }

    .entity-card .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .entity-card .card-body {
        padding: 2.5rem;
    }

    .field-label {
        font-weight: 500;
        color: #555;
    }

    .field-value {
        font-weight: 600;
        color: #000;
        margin-bottom: 1rem;
    }

    .delete-warning {
        background-color: #ffe5e5;
        border: 1px solid #ffcccc;
        border-radius: 0.5rem;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
    }

    .delete-warning h5 {
        color: #b30000;
        margin: 0;
        font-weight: 600;
    }

    .action-buttons .btn {
        min-width: 140px;
    }
</style>

<div class="container center-screen">
    <div class="card shadow-sm entity-card w-100">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete @entity</h3>
        </div>
        <div class="card-body">
            <div class="delete-warning">
                <h5>
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Are you sure you want to delete this <strong>@entity.ToLower()</strong>?
                </h5>
            </div>

            <dl class="row">
                @await Html.PartialAsync("Fields/_StaticFields", Model.StaticFields)
                @await RenderSectionAsync("AdditionalFields", required: true)
            </dl>

            <div class="d-flex justify-content-between align-items-center mt-4 action-buttons">
                <button type="button" onclick="deleteEntity(@Model.Id)" class="btn btn-lg btn-danger">
                    <i class="bi bi-trash3-fill me-2"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/Generics/delete.js"></script>
    <script src="/js/Generics/load_entity.js"></script>
    <script src="@(routePrefix)/common.js"></script>
    <script src="@(routePrefix)/load_entity.js"></script>
    <script>
        $(document).ready(function () {
            loadEntity(@Model.Id);
        });
    </script>
    @await RenderSectionAsync("AdditionalScripts", required: false)
}