@{
    Layout = "_Layout";
    var id = ViewData["ModelId"];
    var entity = ViewData["Entity"].ToString();
    var path = $"/js/{entity}s";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">

        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Edit @entity</h3>
        </div>

        <div class="card-body">
            <form>
                <input type="hidden" id="modelId" value="@id" />

                @* Fields injection here *@
                @RenderSection("Fields", required: true)

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <button type="button" onclick="updateEntity()" class="btn btn-lg btn-warning px-4 text-white">
                        <i class="bi bi-pencil-square me-2"></i> Update
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    <script src="@(path)/edit.js"></script>
    <script>
        $(document).ready(function () {
            loadEntity(@id);
        });
    </script>

    @await RenderSectionAsync("AdditionalScripts", required: false)
}