@{
    Layout = "_Layout";
    var Model = ViewData["ViewModel"] as BaseEntityViewModel;
    var entity = Model.EntityPageName;
    var routePrefix = $"/js/{Model.EntityName}s";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@(entity)s</h2>

        <!-- Create button -->
        <a class="btn btn-success btn-lg px-4 text-black" href="/@(Model.EntityName)s/Create">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="row mb-4">
        <!-- Search field -->
        <div class="col-md-4">
            <input type="text" id="search" class="form-control" placeholder="Search @(Model.EntityArticle) @(entity.ToLower())..." />
        </div>

        <!-- Search button -->
        <div class="col-sm-1">
            <button id="btnSearch" class="btn btn-primary" onclick="loadEntities()">Search</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center">

            <thead class="table-light">
                <tr class="fs-5">

                    <!-- Columns -->
                    @foreach (var field in Model.StaticFields)
                    {
                        <th>@field.Label</th>
                    }

                    @await RenderSectionAsync("AdditionalFields", required: true)

                    <th style="width: 400px;">Actions</th>
                </tr>
            </thead>

            <tbody id="entityTable">

                <!-- Filled by AJAX -->

            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="/js/Generics/index.js"></script>
    <script src="@(routePrefix)/common.js"></script>
    <script src="@(routePrefix)/index.js"></script>

    @await RenderSectionAsync("AdditionalScripts", required: false)
}