@{
    ViewData["Title"] = "Home";
}

<style>
    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    }

    .hero-overlay {
        position: relative;
        overflow: hidden;
        height: 350px;
        border-radius: 0.5rem;
    }

    .hero-overlay img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.15;
    }

    .hero-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<main class="container py-5">

    <!-- Hero Section -->
    <section class="hero-overlay mb-5">
        <img src="~/images/thesis.jpg" alt="Thesis background" />
        <div class="hero-content text-center text-dark px-3">
            <h1 class="display-4 fw-bold mb-3">University Thesis Control System</h1>
            <p class="lead mb-4">
                A comprehensive platform for registering projects, assigning advisors, tracking progress, and managing documents.
            </p>
            <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                Register Project
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col">
            <div class="card border-0 shadow-sm h-100 card-hover">
                <img src="~/images/project.jpeg" class="card-img-top" alt="Project Registration" />
                <div class="card-body">
                    <h5 class="card-title">Project Registration</h5>
                    <p class="card-text">
                        Quickly set up and manage your thesis projects through an intuitive interface.
                    </p>
                    <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-primary rounded-pill">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-0 shadow-sm h-100 card-hover">
                <img src="~/images/tutor.jpg" class="card-img-top" alt="Advisor Assignment" />
                <div class="card-body">
                    <h5 class="card-title">Advisor Assignment</h5>
                    <p class="card-text">
                        Select and collaborate with the ideal advisor to guide your research to success.
                    </p>
                    <a asp-controller="ProjectTutors" asp-action="Index" class="btn btn-outline-primary rounded-pill">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-0 shadow-sm h-100 card-hover">
                <img src="~/images/document.jpg" class="card-img-top" alt="Stage Tracking and Document Review" />
                <div class="card-body">
                    <h5 class="card-title">Stage Tracking &amp; Reviews</h5>
                    <p class="card-text">
                        Monitor milestones and upload documents for seamless online review by your committee.
                    </p>
                    <a asp-controller="Documents" asp-action="Index" class="btn btn-outline-primary rounded-pill">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="text-center">
        <p class="mb-0">
            Need help or have questions? <a href="#">Contact Us</a> for assistance.
        </p>
    </section>

</main>