@{
    Layout = "_Layout";
    var Model = ViewData["ViewModel"] as BaseEntityViewModel;
    var entity = Model.EntityPageName;
    var routePrefix = $"/js/App/{Model.EntityName}s";
}

<style>
    .center-screen {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: auto;
    }

    .entity-card {
        border-radius: 1rem;
    }

    .entity-card .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .entity-card .card-body {
        padding: 2rem;
    }

    .action-buttons .btn {
        min-width: 120px;
    }
</style>

<div class="container center-screen py-5">
    <div class="card shadow-sm entity-card w-100" style="max-width: 1000px;">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Create New @entity</h3>
        </div>
        <div class="card-body">
            <h5 class="text-secondary mb-3">Complete the form below</h5>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Fields injection here -->
            @await Html.PartialAsync("Fields/_DynamicFields", Model.DynamicFields)
            @await RenderSectionAsync("AdditionalFields", required: true)

            <div class="d-flex justify-content-between align-items-center mt-4 action-buttons">
                <button onclick="addEntity()" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle me-2"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/Generics/create.js"></script>
    <script src="@(routePrefix)/common.js"></script>
    <script src="@(routePrefix)/create.js"></script>

    @await RenderSectionAsync("AdditionalScripts", required: false)
}