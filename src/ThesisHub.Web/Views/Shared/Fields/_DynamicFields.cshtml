@model List<FieldModel>

<style>
    .edit-grid {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .edit-item {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 500;
        color: #555;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 2rem;
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(100, 149, 237, 0.25);
        border-color: #6495ED;
    }

    .field-error {
        color: #d9534f;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="edit-grid">
    @foreach (var field in Model)
    {
        @if (field.IsHidden)
        {
            continue;
        }
        <div class="edit-item">
            <label for="@field.Id" class="form-label">@field.Label</label>
            <input type="@field.Type"
                   id="@field.Id"
                   name="@field.Id"
                   class="form-control"
                   placeholder="Enter @field.Placeholder" />
            <span asp-validation-for="@field.Id" class="field-error"></span>
        </div>
    }
</div>
